<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainItemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

  <ImageView
      android:id="@+id/deviceImage"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_margin="7dp"
      android:layout_marginTop="8dp"
      android:contentDescription="@string/contentDescription"
      app:srcCompat="@drawable/device_48" />

  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_weight="1"
      android:orientation="vertical">

    <TextView
        android:id="@+id/deviceIp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Device name"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/deviceMac"
        android:layout_width="285dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="IP address"
        android:textColor="@color/text_smoke_color" />
  </LinearLayout>

  <ImageButton
      android:id="@+id/nextBtn"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_gravity="center"
      android:background="@drawable/transparent_rectangle"
      android:contentDescription="@string/contentDescription"
      android:padding="7dp"
      android:scaleType="fitCenter"
      app:srcCompat="@drawable/more_than_50" />

</LinearLayout>